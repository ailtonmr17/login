<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Campo para el Precio de la Divisa -->

    <EditText
        android:id="@+id/etPrecioDivisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio divisa"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
    android:padding="12dp"
     />

    <EditText
        android:id="@+id/etMontoConvertir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto a convertir"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
    android:padding="12dp"
    android:layout_marginTop="16dp"
    />


    <!-- Botón para Convertir -->
    <Button
        android:id="@+id/btnConvertir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFC107"
        android:textStyle="bold"
        android:padding="12dp" />

    <!-- Campo para Mostrar el Resultado -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTADO"
        android:gravity="center"
        android:textColor="#5D777777"
        android:padding="20dp"
        android:layout_marginTop="5dp"
         />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFC107"
        android:padding="12dp"
        android:text="Cerrar Sesión"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</LinearLayout>
